/* pages/userList/userList.wxss */

page {
  background: #f2f2f2;
}

.notice {
  height: 4vh;
  line-height: 4vh;
}

.messageList {
  height: 69vh;
  flex-grow: 1;
  position: relative;
}

.list {
  position: absolute;
  display: flex;
  flex-wrap: wrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.list-scroll-view {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
}

.commentPart1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 2%;
  padding-right: 4%;
}

.commentName {
  font-size: 20rpx;
}

.commentsBlock {
  display: flex;
  flex-direction: column;
  width: 100vw;
}
