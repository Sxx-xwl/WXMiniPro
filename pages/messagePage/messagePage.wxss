/* pages/messagePage/messagePage.wxss */

page {
  background: #f2f2f2;
}

.notice {
  height: 4vh;
  line-height: 4vh;
}

.messageList {
  height: 69vh;
  flex-grow: 1;
  position: relative;
}

.list {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.list-scroll-view {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
}

.commentsInfo {
  display: flex;
  width: 100vw;
  /** 47 * 2 = 94 **/
  margin-top: 10px;
  margin-bottom: 10px;
  /* margin: 10px; */
}

.commentPart1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 2%;
  padding-right: 4%;
}

.commentName {
  font-size: 20rpx;
}

.commentPart2 {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  width: 90%;
  padding-right: 2%;
}

.comment {
  word-break: break-all;
  word-wrap: break-word;
  font-size: small;
  padding-bottom: 3%;
}

.commentData {
  font-size: x-small;
  padding-left: 190px;
}

.divider {
  width: 100vw;
  border: dashed 1px black;
}

.commentsBlock {
  display: flex;
  flex-direction: column;
  width: 100vw;
}

.messagePanelParent {
  align-items: center;
  width: 100vw;
  height: 24vh;
  position: absolute;
  justify-content: center;
  top: 1;
  right: 0;
  left: 0;
  bottom: 0;
}

.messagePanel {
  flex-grow: 1;
  position: absolute;
  top: 1;
  right: 0;
  left: 0;
  bottom: 0;

}